{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "typeRoots": [
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "hyperion-explorer",
    "build",
    "plugins/repos"
  ]
}
